<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mega.miwok">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBarStyle">
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.PhrasesActivity"
            android:label="@string/category_phrases"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ColorsActivity"
            android:label="@string/category_colors"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.NumbersActivity"
            android:label="@string/category_numbers"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.FamilyActivity"
            android:label="@string/category_family"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ViewedActivity"
            android:label="@string/learnt_words"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>